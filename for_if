#include <stdio.h>
int main ()
{
	//  kullanıcıdan 3 adet sayı okuyup en büyüğünü ekrana yazan bir kod yazınız.
	
int girilen;
int i;
int enBuyuk;

for(i=0; i<3; i++){
	printf("\nbir sayi giriniz: ");
	scanf("%d",&girilen);
		if(girilen>enBuyuk)
			enBuyuk=girilen;
}
printf("enBuyuk sayimiz: %d",enBuyuk);







double a,b,c;

printf("\n ekrana 3 sayi giriniz: ");
scanf("%lf %lf %lf",&a,&b,&c);

if(a>b && a>c){
	printf("%f",a);
	}else if(b>a && b>c)
		printf("%f",b);
		else
			printf("%.2f",c);	
		}
